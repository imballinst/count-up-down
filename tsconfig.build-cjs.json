{
  "include": ["./src/node/*.ts", "./src/browser/*.ts"],
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./dist/cjs",
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
