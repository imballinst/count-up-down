{
  "include": ["./src/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist/esm",
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
