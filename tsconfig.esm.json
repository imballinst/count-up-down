{
  "include": ["./src/*.ts", "./scripts/**/*.ts"],
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./lib/esm",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
